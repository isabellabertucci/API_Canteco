{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Canteco api document",
        "description": "Canteco Project Application API",
        "contact": {
            "email": "isabella@example.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:/3000",
            "description": "Localhost"
        }
    ],
    "paths": {
        "type": "https",
        "headers": {
            "Access-Control-Allow-Origin": {
                "type": "string"
            }
        },
        "/items": {
            "post": {
                "summary": "Criação de um Item",
                "description": "Essa rota será responsável por criar um novo item",
                "tags": [
                    "Items"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Item"
                            },
                            "examples": {
                                "item": {
                                    "value": {
                                        "itemName": "Black Beans",
                                        "kcal": 850,
                                        "quantity": 1,
                                        "protein": 210,
                                        "fat": 3,
                                        "carbs": 180,
                                        "water": 1650,
                                        "carbon": 2,
                                        "image": "BlackBeans.img"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized client"
                    },
                    "422": {
                        "description": "Item alredy exists"
                    },
                    "200": {
                        "description": "successfully created item",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Item"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/items/{id}": {
            "get": {
                "description": "Busca um item pelo id",
                "summary": "Busca de um item pelo id",
                "tags":["Items"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "item pelo id ",
                        "require": true
                    }
                ],
                "responses":{
                    "200":{
                        "description": "ok",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schemas/Item"
                                }
                            }
                        }
                    }
                }
            },
            "put":{
                "description": "Atualizar um item pelo id",
                "summary": "Atualizar de um item pelo id",
                "tags":["Items"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "item pelo id ",
                        "require": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Item"
                            },
                            "examples": {
                                "item": {
                                    "value": {
                                        "itemName": "Pastaa",
                                        "kcal": 850,
                                        "quantity": 1,
                                        "protein": 210,
                                        "fat": 3,
                                        "carbs": 180,
                                        "water": 1650,
                                        "carbon": 2,
                                        "image": "BlackBeans.img"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "ok",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schemas/Item"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Item": {
                "type": "object",
                "properties": {
                    "itemName": {
                        "type": "string",
                        "require": true
                    },
                    "kcal": {
                        "type": "number",
                        "require": true
                    },
                    "quantity": {
                        "type": "number",
                        "require": true
                    },
                    "protein": {
                        "type": "number",
                        "require": false
                    },
                    "fat": {
                        "type": "number",
                        "require": false
                    },
                    "carbs": {
                        "type": "number",
                        "require": false
                    },
                    "water": {
                        "type": "number",
                        "require": false
                    },
                    "carbon": {
                        "type": "number",
                        "require": false
                    },
                    "image": {
                        "type": "string",
                        "require": false
                    },
                    "id": {
                        "type": "string",
                        "require": false
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "https",
                "scheme": "Authorization",
                "bererFormat": "JWT"
            }
        }
    }
}